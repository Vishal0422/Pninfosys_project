<%- include('../header.ejs') %>
<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                
                <div class="col-md-12">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1 style="font-family: 'Mochiy Pop One', sans-serif;" class="mb-5">Contacts</h1>
                            </div>
                            
                        </div>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>E-mail</th>
                                <th>Phone</th>
                                <th>Message</th>
                                <th>Action</th>
                            </tr>
                            <td><% var i=1 %></td>
                            <% data.forEach((item)=>{ %>
                            <tr>
                                <td><%= i++ %></td>
                                <td><%= item.name %></td>
                                <td><%= item.email %></td>
                                <td><%= item.phone %></td>
                                <td><%= item.message %></td>
                                
                                <td>
                                    <a href="" class="btn btn-success btn-sm">View</a>
                                    <a href="/admin/editcontact/<%= item._id %>" class="btn btn-info btn-sm">Edit</a>
                                    <a href="" class="btn btn-danger btn-sm">Delete</a>
                                   
                                </td>
                                
                            </tr>
                            <% })%>
                            
                            
                        </table>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../footer.ejs') %>

