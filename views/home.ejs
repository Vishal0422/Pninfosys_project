<%- include('./header.ejs') %>
<section class="banner">
    <div class="banner-box">
        <div class="intro-text">
            <h1>We Blogs</h1>
        </div>
        <img src="assets/images/banner1.webp" alt="banner" />
    </div>
</section>
<section class="featured-blog mtb-40">
    <div class="container">
        <div class="row">
            
            <% data.forEach((item)=>{ %>
            <div class="col-md-4 mt-5">
                <div class="blog-box shadow-lg p-3 mb-5 bg-white rounded">
                    <img src="/upload/<%= item.image %>" width="250px" height="200px" alt="blog1" />
                    <h3 ><%= item.title %></h3>
                    <p style="font-family: 'Dancing Script', cursive;"> <%= item.createdAt.toLocaleDateString() %></p>
                    <p style="font-family: 'Dancing Script', cursive;"><%= item.description.slice(0, 120) %></p>
                    <a href="/detail/<%= item._id %>" class="btn homebutton text-white">Read more...</a>
                </div>
            </div>
            <% })%>
            
        </div>
    </div>
</section>
<%- include('./footer.ejs') %>